{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Symphony",
	"patterns": [
		{
			"include": "#operators"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#numliterals"
		},
		{
			"include": "#labels"
		},
		{
			"include": "#stack"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"operators":{
			"patterns": [{
				"name":"keyword.control.symphony",
				"match": "\\b(add|sub|mul|div|rem|and|or|xor|not|neg|eq|gt|ge|lt|le|ne)\\b"
			}]
		},
		"functions":{
			"patterns": [{
				"name":"keyword.control.symphony",
				"match": "\\b(function|call)\\s+([^ \\/]*)",
				"captures": {
					"2":{
						"patterns": [{
							"name":"entity.name.function",
							"match": "[a-zA-Z\\_\\.\\$\\:]+[a-zA-Z\\_\\.\\$\\:\\d]*"
						}]
					}
				}

			},
			{
				"name":"keyword.control.symphony",
				"match": "return"
			}
		]
		},
		"numliterals":{
			"patterns": [{
				"name":"constant.numeric",
				"match": "\\d+"
			}]
		},
		"comments":{
			"patterns": [{
				"name":"comment",
				"match": "//.*"
			}]
		},
		"strings": {
			"name": "string.quoted.double.symphony",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.symphony",
					"match": "\\\\."
				}
			]
		},
		"labels":{
			"patterns": [{
				"name":"keyword.control.symphony",
				"match": "\\b(label|goto|if-goto)\\s+([^ \\/]*)",
				"captures": {
					"2":{
						"patterns": [{
							"name":"variable",
							"match": "[a-zA-Z\\_\\.\\$\\:]+[a-zA-Z\\_\\.\\$\\:\\d]*"
						}]
					}
				}

			}]
		},
		"stack":{
			"patterns": [{
				"name":"keyword.control.symphony",
				"match": "\\b(push|pop)\\s+([^ \\/]*)",
				"captures": {
					"2":{
						"patterns": [{
							"name":"storage",
							"match": "[a-zA-Z\\_\\.\\$\\:]+[a-zA-Z\\_\\.\\$\\:\\d]*"
						}]
					}
				}

			}]
		}
	},
	"scopeName": "source.symphony"
	
}