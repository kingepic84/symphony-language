{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Symphony",
	"patterns": [
		{
			"include": "#operators"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#numliterals"
		},
		{
			"include": "#labels"
		},
		{
			"include": "#stack"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#pointers"
		}
	],
	"repository": {
		"operators":{
			"patterns": [{
				"name":"entity.name.class.symphony",
				"match": "\\b(add|sub|mul|div|rem)\\b"
			},
			{
				"name":"variable.other.constant",
				"match": "\\b(and|or|xor|not|neg)\\b"
			},
			{
				"name":"constant.regexp",
				"match": "\\b(eq|gt|ge|lt|le|ne)\\b"
			}
		]
		},
		"functions":{
			"patterns": [{
				"name":"keyword.control.symphony",
				"match": "\\b(function|call)\\s+([^ \\/]*)",
				"captures": {
					"2":{
						"patterns": [{
							"name":"entity.name.function",
							"match": "[a-zA-Z\\_\\.\\$\\:]+[a-zA-Z\\_\\.\\$\\:\\d]*"
						}]
					}
				}

			},
			{
				"name":"keyword.control.symphony",
				"match": "return"
			}
		]
		},
		"numliterals":{
			"patterns": [{
				"name":"constant.numeric",
				"match": "\\d+"
			}]
		},
		"comments":{
			"patterns": [{
				"name":"comment",
				"match": "//.*"
			},
			{
				"name":"comment.block",
				"begin": "/\\*.*",
				"end": "\\*/"
			}
		]
		},
		"strings": {
			"name": "string.quoted.double.symphony",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.symphony",
					"match": "\\\\."
				}
			]
		},
		"labels":{
			"patterns": [{
				"name":"keyword.control.symphony",
				"match": "\\b(label|goto|if-goto)\\s+([^ \\/ \\*]*)",
				"captures": {
					"2":{
						"patterns": [{
							"name":"variable",
							"match": "[a-zA-Z\\_\\.\\$\\:]+[a-zA-Z\\_\\.\\$\\:\\d]*"
						}]
					}
				}

			}]
		},
		"pointers":{
			"patterns": [{
				"name":"storage",
				"match": "[\\*]"
			}]
		},
		"stack":{
			"patterns": [{
				"name":"constant.character.character-class.regexp.symphony",
				"match": "\\b(push|pop)\\s+([^ \\/]*)",
				"captures": {
					"2":{
						"patterns": [{
							"name":"storage",
							"match": "[a-zA-Z\\_\\.\\$\\:]+[a-zA-Z\\_\\.\\$\\:\\d]*"
						}]
					}
				}

			}]
		}
	},
	"scopeName": "source.symphony"
	
}